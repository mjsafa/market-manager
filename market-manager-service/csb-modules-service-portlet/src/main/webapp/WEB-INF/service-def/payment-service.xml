<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.1.0//EN"
        "http://www.liferay.com/dtd/liferay-service-builder_6_1_0.dtd">

<service-builder package-path="com.arman.csb.modules.service">

    <entity name="Payment" uuid="true" local-service="true" remote-service="true">

        <column name="id" type="long" primary="true"/>

        <!-- Group instance -->
        <column name="groupId" type="long"/>
        <column name="companyId" type="long"/>

        <!-- Audit fields -->
        <column name="userId" type="long"/>
        <column name="createDate" type="Date"/>
        <column name="modifiedDate" type="Date"/>

        <!-- Other fields -->

        <column name="description" type="String"/>
        <column name="card" type="String"/>
        <column name="amount" type="long"/>
        <column name="status" type="int"/>
        <column name="paymentDate" type="Date"/>
        <column name="customerId" type="long"/>
        <column name="factorId" type="long"/>

        <finder name="Customer" return-type="Collection">
            <finder-column name="customerId"/>
        </finder>


        <finder name="Factor" return-type="Collection">
            <finder-column name="factorId"/>
        </finder>

        <finder name="Status" return-type="Collection">
            <finder-column name="status"/>
        </finder>

        <finder name="StatusAndGroup" return-type="Collection">
            <finder-column name="groupId"/>
            <finder-column name="status"/>
        </finder>


    </entity>

</service-builder>