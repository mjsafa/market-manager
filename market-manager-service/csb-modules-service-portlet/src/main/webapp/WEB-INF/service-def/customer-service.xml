<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.1.0//EN"
        "http://www.liferay.com/dtd/liferay-service-builder_6_1_0.dtd">

<service-builder package-path="com.arman.csb.modules.service">

    <entity name="Customer" uuid="true" local-service="true" remote-service="true" >

        <column name="id" type="long" primary="true"/>

        <!-- Group instance -->

        <column name="groupId" type="long"/>
        <column name="companyId" type="long"/>

        <!-- Audit fields -->
        <column name="userId" type="long"/>
        <column name="userName" type="String"/>
        <column name="createDate" type="Date"/>
        <column name="modifiedDate" type="Date"/>

        <!-- Other fields -->

        <column name="name" type="String"/>
        <column name="firstName" type="String"/>
        <column name="lastName" type="String"/>
        <column name="mobile" type="String"/>
        <column name="nationalCode" type="String"/>
        <column name="email" type="String"/>
        <column name="card" type="String"/>
        <column name="cardExpireDate" type="Date"/>
        <column name="score" type="long"/>
        <column name="status" type="int"/>

        <column name="customerUserId" type="long"/>
        <column name="mentorCustomerId" type="long"/>

        <finder name="Mentor" return-type="Collection">
            <finder-column name="mentorCustomerId"/>
        </finder>


        <finder name="UserId" return-type="Customer">
            <finder-column name="customerUserId"/>
        </finder>

    </entity>

</service-builder>