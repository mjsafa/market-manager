<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.1.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_6_1_0.dtd">

<service-builder package-path="com.arman.csb.modules.service">

    <entity name="Product" uuid="true" local-service="true" remote-service="true">
        <column name="id" type="long" primary="true" />

        <!-- Group instance -->
        <column name="groupId" type="long" />
        <column name="companyId" type="long" />

        <!-- Audit fields -->
        <column name="userId" type="long" />
        <column name="userName" type="String" />
        <column name="createDate" type="Date" />
        <column name="modifiedDate" type="Date" />

        <!-- Other fields -->
        <column name="name" type="String" />
        <column name="code" type="String" />
        <column name="basePrice" type="long" />
        <column name="score" type="long" />

        <finder name="UserId" return-type="Collection">
            <finder-column name="userId"></finder-column>
        </finder>

        <finder name="Name" return-type="Collection">
            <finder-column name="name"></finder-column>
        </finder>

        <finder name="Code" return-type="Collection">
            <finder-column name="code"></finder-column>
        </finder>

    </entity>

</service-builder>